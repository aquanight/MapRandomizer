{
  "$schema": "../../schema/scenarios.schema.json",
  "scenarios": [
    {
      "name": "Get Blue Speed (Speed Booster)",
      "globalState": {
        "items": ["SpeedBooster"]
      },
      "startRoomId": 0,
      "startNodeId": 1,
      "endRoomId": 0,
      "endNodeId": 2
    },
    {
      "name": "Get Blue Speed (Blue Booster)",
      "globalState": {
        "items": ["BlueBooster"]
      },
      "startRoomId": 0,
      "startNodeId": 1,
      "endRoomId": 0,
      "endNodeId": 2
    },
    {
      "name": "Get Blue Speed (Spark Booster)",
      "globalState": {
        "items": ["SparkBooster"]
      },
      "startRoomId": 0,
      "startNodeId": 1,
      "endRoomId": 0,
      "endNodeId": 2
    },
    {
      "name": "Fail: No Booster",
      "settings": {
        "shinechargeTiles": 15
      },
      "startRoomId": 0,
      "startNodeId": 1,
      "endRoomId": 0,
      "endNodeId": 2,
      "fail": true
    },
    {
      "name": "Fail: Runway Too Short",
      "settings": {
        "shinechargeTiles": 16
      },
      "globalState": {
        "items": ["SpeedBooster"]
      },
      "startRoomId": 0,
      "startNodeId": 1,
      "endRoomId": 0,
      "endNodeId": 2,
      "fail": true
    },
    {
      "name": "Carry Flash Suit",
      "globalState": {
        "items": ["SpeedBooster"]
      },
      "startRoomId": 0,
      "startNodeId": 1,
      "startState": {
        "flashSuit": 1
      },
      "endRoomId": 0,
      "endNodeId": 2,
      "endState": {
        "flashSuit": 1
      }
    },
    {
      "name": "Fail: Cannot Carry Blue Suit",
      "globalState": {
        "items": ["SpeedBooster"]
      },
      "startRoomId": 0,
      "startNodeId": 1,
      "startState": {
        "blueSuit": 1
      },
      "endRoomId": 0,
      "endNodeId": 2,
      "endState": {
        "blueSuit": 1
      },
      "fail": true
    },
    {
      "name": "Lose Blue Suit",
      "globalState": {
        "items": ["SpeedBooster"]
      },
      "startRoomId": 0,
      "startNodeId": 1,
      "startState": {
        "blueSuit": 1
      },
      "endRoomId": 0,
      "endNodeId": 2,
      "endState": {
        "blueSuit": 0
      },
      "reverse": "weak"
    }
